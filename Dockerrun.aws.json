{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"kpsirish/multi-client",
            "hostname": "client",
            "essential":false
        },
        {
            "name":"server",
            "image":"kpsirish/multi-server",
            "hostname": "api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"kpsirish/multi-worker",
            "hostname": "worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"kpsirish/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client","server"]
        }
    ]
}